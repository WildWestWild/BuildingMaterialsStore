@model System.Collections.Generic.IEnumerable<BuildingMaterialsStore.Models.Product>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp asp-action="Upsert" asp-controller="Product" class="btn btn-primary">
                <i class="fas fa-plus"> </i> &nbsp; Create New Product 
            </a>
        </div>
    </div>
    
    <br/>
    
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Category
                </th>
                <th>
                    Application Type
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%"> @obj.Name</td>
                    <td width="15%"> @obj.Price</td>
                    <td width="20%"> @obj.Category.Name</td>
                    <td width="20%"> @obj.ApplicationType.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary">
                                <i class="fas fa-edit"></i> &nbsp;
                            </a>
                            <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p> No Product exists </p>
    }
</div>
